<!--Table-->
<div class="container table-responsive">
  <table id="contest" class="table table-striped table-bordered">
    <thead>
      <tr id="header-row">
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Max Number of Entrants</th>
        <th scope="col">Current Number of Entrants</th>
        <th scope="col">Leader</th>
      </tr>
    </thead>
    <br/>
    <br/>
    <tbody>
      {{#each contests as |contest|}}
      <tr class="contest-row">
        <td>{{this.id}}</td>
        <td class="contest-name" id="{{this.id}}" data-toggle="modal"
            data-target="#modalContestCard">{{this.name}}</td>
        <td>{{this.entrants_total}}</td>
        <td>{{this.entrants_current}}</td>
        <td>{{this.winner}}</td>
      {{/each}}
      </tr>
    </tbody>
  </table>
</div>